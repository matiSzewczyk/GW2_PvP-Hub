        <item name="colorPrimary">@color/red_500</item>
        <item name="colorPrimaryVariant">@color/red_500</item>
        <item name="colorOnPrimary">@color/gray_dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red_700</item>
