        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:windowBackground">?attr/colorOnPrimary</item>

        <item name="fontFamily">@font/red_hat_display</item>
    </style>
